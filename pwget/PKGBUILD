pkgname='pwget'
pkgver=1.1
pkgrel=1
pkgdesc='Stateless password manager with support for password revocation'
arch=('i686' 'x86_64')
url='https://github.com/majewsky/pwget'
license=('GPL3')
depends=('openssl')
makedepends=('go')
source=("https://github.com/majewsky/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('30bf20588e48281517b236e8b181a903')
sha256sums=('c5de74d5e0312f969b8dfc47c19b5e15b4553443ad5f2ff5b9c6c1aa99d61829')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make install DESTDIR="${pkgdir}"
}
