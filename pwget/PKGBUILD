pkgname='pwget'
pkgver=1.0
pkgrel=1
pkgdesc='Stateless password manager with support for password revocation'
arch=('i686' 'x86_64')
url='https://github.com/majewsky/pwget'
license=('GPL3')
depends=('openssl')
makedepends=('go')
source=("https://github.com/majewsky/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('0d7e44b4c5113faee8c9e341871d7fa4')
sha256sums=('d3a3ec3f02314b8f2af96e1383c03ecead4c9fa4041fc8790d9bcf4ff955255d')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make install DESTDIR="${pkgdir}"
}
