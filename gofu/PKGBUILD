pkgname=gofu
_commit="4599d09dc2"
epoch=1
pkgver="20170819.3.g${_commit}"
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
_goget_url='github.com/majewsky/gofu'
url="https://${_goget_url}"
license=('GPL3')
depends=()
makedepends=('go')
source=("gofu::git+https://${_goget_url}#commit=${_commit}")
sha256sums=('SKIP')

build() {
  cd "${srcdir}/gofu"
  make
}

package() {
  cd "${srcdir}/gofu"
  make install DESTDIR="${pkgdir}"
}
